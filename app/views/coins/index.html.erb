<div class='p-5'>
  <h1><%= t('coins') %></h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= Coin.human_attribute_name(:description) %></th>
        <th><%= @coins.human_attribute_name(:acronym) %></th>
        <th><%= @coins.human_attribute_name(:url_image) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td><%= image_tag coin.url_image, size: "25x25" %></td>
          <td><%= link_to t('links.show'), coin, class:'link-secondary' %></td>
          <td><%= link_to t('links.edit'), edit_coin_path(coin), class:'link-secondary' %></td>
          <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('delete.confirm') }, class:'link-secondary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  <%= link_to t('new_coin'), new_coin_path, class:'btn btn-warning' %>
  <br>
  <%= link_to t('links.home'), root_path, class:'btn btn-dark btn-sm mt-3' %>
</div>