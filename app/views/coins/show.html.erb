<div class='p-5'>
  <p class='fs-5'>
    <strong><%= t('description') %>:</strong>
    <%= @coin.description %>
  </p>

  <p class='fs-5'>
    <strong><%= t('acronym') %>:</strong>
    <%= @coin.acronym %>
  </p>

  <p class='fs-5'>
    <strong><%= t('image') %>:</strong>
    <%= image_tag @coin.url_image, size: "25x25" %>
  </p>

  <%= link_to t('links.edit'), edit_coin_path(@coin), class:'btn btn-dark btn-sm' %>
  <%= link_to t('links.back'), coins_path, class:'btn btn-dark btn-sm' %>
</div>